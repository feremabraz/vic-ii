#!/bin/sh
echo "ğŸš€ Running pre-push checks..."

# Check for bypass flag
if [ "$SKIP_HOOKS" = "1" ] || [ "$BYPASS_PUSH_PROTECTION" = "1" ]; then
  echo "âš ï¸ Bypassing pre-push protection (BYPASS_PUSH_PROTECTION=1)"
  exit 0
fi

# Prevent pushing to main/master directly
current_branch=$(git symbolic-ref HEAD | sed -e 's,.*/\(.*\),\1,')
remote_name="$1"

if [ "$current_branch" = "main" ] || [ "$current_branch" = "master" ]; then
  # Check if the branch already exists on the remote
  if git ls-remote --exit-code --heads "$remote_name" "$current_branch" >/dev/null 2>&1; then
    echo "âŒ Direct push to existing branch '$current_branch' on remote '$remote_name' is not allowed. Use a feature branch."
    echo "ğŸ’¡ To bypass: BYPASS_PUSH_PROTECTION=1 git push"
    exit 1
  else
    echo "âœ… First push of '$current_branch' to remote '$remote_name'. Allowing."
  fi
fi

echo "âœ… Pre-push checks passed!"
exit 0
